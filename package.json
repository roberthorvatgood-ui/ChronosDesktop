{
  "name": "chronos-desktop",
  "version": "1.2.12",
  "description": "Chronos â€” Electron desktop (autodetect build)",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "start:devtools": "cross-env OPEN_DEVTOOLS=1 electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win nsis --x64",
    "dist:win:portable": "electron-builder --win portable --x64"
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.6.0",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.didakta.chronos",
    "productName": "Chronos Desktop",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "asar": true,

    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "artifactName": "Chronos-Setup-${version}.${ext}"
    },

    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "uninstallDisplayName": "Chronos Desktop",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },

    "portable": {
      "artifactName": "Chronos-Portable-${version}.${ext}",
      "unpackDirName": false,
               "splashImage": "build/splash.bmp"
     
    }
  }
}